<div 
  id="toast" 
  class="fixed bottom-4 right-4 px-6 py-4 rounded-lg shadow-lg transform transition-all duration-300 translate-y-full opacity-0"
  role="alert"
>
  <div class="flex items-center space-x-3">
    <div id="toastIcon" class="flex-shrink-0"></div>
    <p id="toastMessage" class="text-sm font-medium"></p>
  </div>
</div>

<script>
  let timeoutId: number;

  export function showToast(message: string, type: 'success' | 'error' = 'success') {
    const toast = document.getElementById('toast');
    const toastMessage = document.getElementById('toastMessage');
    const toastIcon = document.getElementById('toastIcon');
    
    if (!toast || !toastMessage || !toastIcon) return;

    // Clear existing timeout
    if (timeoutId) {
      clearTimeout(timeoutId);
    }

    // Set styles based on type
    if (type === 'success') {
      toast.className = 'fixed bottom-4 right-4 px-6 py-4 rounded-lg shadow-lg bg-green-50 text-green-800';
      toastIcon.innerHTML = `
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      `;
    } else {
      toast.className = 'fixed bottom-4 right-4 px-6 py-4 rounded-lg shadow-lg bg-red-50 text-red-800';
      toastIcon.innerHTML = `
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      `;
    }

    toastMessage.textContent = message;
    toast.classList.remove('translate-y-full', 'opacity-0');

    // Hide after 5 seconds
    timeoutId = setTimeout(() => {
      toast.classList.add('translate-y-full', 'opacity-0');
    }, 5000);
  }

  // Make showToast available globally
  window.showToast = showToast;
</script>