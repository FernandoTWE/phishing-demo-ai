---
interface Props {
  title: string;
  content: string;
  warnings?: string[];
}

const { title, content, warnings } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden">
  <div class="p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">{title}</h2>
    <div class="text-gray-600 leading-relaxed mb-6">{content}</div>
    
    {warnings && warnings.length > 0 && (
      <>
        <h3 class="text-md font-semibold text-gray-900 mb-3">Se√±ales de Advertencia</h3>
        <ul class="space-y-3">
          {warnings.map((warning) => (
            <li class="flex items-start space-x-3">
              <svg class="h-5 w-5 text-red-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <span class="text-gray-600">{warning}</span>
            </li>
          ))}
        </ul>
      </>
    )}
  </div>
</div>