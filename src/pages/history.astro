---
import Layout from '../layouts/Layout.astro';
import AnalysisTable from '../components/history/AnalysisTable.astro';
---

<Layout title="Histórico de Análisis">
  <main class="min-h-screen bg-gradient-to-br from-indigo-100 to-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Histórico de Análisis</h1>
        <a
          href="/"
          class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Nuevo Análisis
        </a>
      </div>

      <div id="historyContainer">
        <AnalysisTable />
      </div>
    </div>
  </main>
</Layout>